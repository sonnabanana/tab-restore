{
  "manifest_version": 3,

  "name": "Tab Restore",
  "description": "Tab Restore helps to restore recently closed tabs and window sessions.",
  "version": "0.1.3",
  "action": {
    "default_icon": {
      "19": "img/19.png",
      "38": "img/38.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "img/128.png",
    "48": "img/48.png",
    "32": "img/32.png",
    "16": "img/16.png",
    "38": "img/38.png",
    "19": "img/19.png"
  },
  "permissions": [
    "sessions",
    "tabs"
  ],
  "options_page": "options.html"
}

